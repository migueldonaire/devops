pipeline {
    agent any

    options { skipDefaultCheckout() }

    stages {
        stage( 'Get Code') {
            steps {
                git 'https://github.com/anieto-unir/helloworld.git'
                sh '''
                    echo "Usuario actual:"
                    whoami
                    echo "Nombre del host:"
                    hostname
                    echo ${WORKSPACE}
                '''
                stash name:'code', includes:'**'
                script {
                    deleteDir()
                }
            }
        }
        
        stage( 'Tests') {
            parallel{
                stage( 'Unit') {
                    agent {label 'mac2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask
                                export PYTHONPATH=$WORKSPACE
                                ./venv/bin/pytest --junitxml=result-unit.xml test/unit
                            '''
                            junit 'result-unit.xml'
                        }
                        script {
                            deleteDir()
                        }
                    }
                }
                
                stage( 'Rest') {
                    agent {label 'mac3'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask
                                export FLASK_APP=app/api.py   
                                export FLASK_ENV=development
                                ./venv/bin/flask run --host=127.0.0.1 --port=5000 --no-reload &
                                java -jar /Users/migueldonaireparra/Documents/devOps/wiremock/wiremock-standalone-3.13.2.jar --port 9090 --root-dir test/wiremock  &
                               
                                # Esperar a Flask
                                for i in {1..20}; do
                                  curl -s http://127.0.0.1:5000 >/dev/null && break
                                  sleep 1
                                done

                                # Esperar a WireMock
                                for i in {1..20}; do
                                  curl -s http://localhost:9090/__admin >/dev/null && break
                                  sleep 1
                                done

                                export PYTHONPATH=$WORKSPACE
                                ./venv/bin/pytest --junitxml=result-rest.xml test/rest
                            '''
                            junit 'result-rest.xml'
                        }
                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Static') {
                    agent {label 'mac2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                
                                python3 -m venv venv
                                ./venv/bin/pip install flake8 flake8-html
                                
                                ./venv/bin/flake8 --format=html --htmldir=flake8_html app/ || true
                                ./venv/bin/flake8 --format=pylint --output-file=flake8.out app/ || true
                            '''

                            recordIssues enabledForFailure: true, 
                                tool: pyLint(pattern: 'flake8.out'),
                                qualityGates: [
                                    [threshold: 8, type: 'TOTAL', unstable: true],
                                    [threshold: 10, type: 'TOTAL', unstable: false]
                                ]

                            publishHTML([
                                allowMissing: true,
                                alwaysLinkToLastBuild: true,
                                keepAll: true,
                                reportDir: 'flake8_html',
                                reportFiles: 'index.html',
                                reportName: 'Flake8 HTML Report'
                            ])
                        }
                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Security Test') {
                    agent {label 'mac2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                
                                python3 -m venv venv
                                ./venv/bin/pip install bandit
                                
                                ./venv/bin/bandit -r app -f json -o bandit-report.json || true
                                ./venv/bin/bandit -r app -f xml -o bandit-report.xml || true
                                ./venv/bin/bandit -r app -f html -o bandit-report.html || true
                            '''
                            
                            recordIssues enabledForFailure: true,
                                tool: bandit(pattern: 'bandit-report.json'),
                                qualityGates: [
                                    [threshold: 2, type: 'TOTAL', unstable: true],
                                    [threshold: 4, type: 'TOTAL', unstable: false]
                                ]
                            
                            publishHTML([
                                allowMissing: true,
                                alwaysLinkToLastBuild: true,
                                keepAll: true,
                                reportDir: '.',
                                reportFiles: 'bandit-report.html',
                                reportName: 'Bandit Security Report'
                            ])
                        }
                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Coverage') {
                    agent {label 'mac3'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask coverage pytest-cov
                                export PYTHONPATH=$WORKSPACE
                                
                                ./venv/bin/coverage run -m pytest test/unit
                                ./venv/bin/coverage xml -o coverage.xml
                                ./venv/bin/coverage html -d coverage_html
                                
                                ./venv/bin/coverage report
                                
                                LINE_COV=$(./venv/bin/coverage report | grep TOTAL | awk '{print $4}' | sed 's/%//')
                                BRANCH_COV=$(./venv/bin/coverage report --show-missing | grep TOTAL | awk '{print $3}' | sed 's/%//' || echo "0")
                                
                                echo "========================================"
                                echo "Line Coverage: $LINE_COV%"
                                echo "Branch Coverage: $BRANCH_COV%"
                                echo "========================================"
                                
                                FAIL=0
                                
                                if (( $(echo "$LINE_COV < 85" | bc -l) )); then
                                    echo "FAILURE: Line coverage $LINE_COV% < 85%"
                                    FAIL=1
                                elif (( $(echo "$LINE_COV < 95" | bc -l) )); then
                                    echo "UNSTABLE: Line coverage $LINE_COV% is between 85-95%"
                                else
                                    echo "SUCCESS: Line coverage $LINE_COV% >= 95%"
                                fi
                                
                                if [ "$BRANCH_COV" != "0" ]; then
                                    if (( $(echo "$BRANCH_COV < 80" | bc -l) )); then
                                        echo "FAILURE: Branch coverage $BRANCH_COV% < 80%"
                                        FAIL=1
                                    elif (( $(echo "$BRANCH_COV < 90" | bc -l) )); then
                                        echo "UNSTABLE: Branch coverage $BRANCH_COV% is between 80-90%"
                                    else
                                        echo "SUCCESS: Branch coverage $BRANCH_COV% >= 90%"
                                    fi
                                fi
                                
                                echo "========================================"
                                
                                if [ $FAIL -eq 1 ]; then
                                    exit 1
                                fi
                            '''

                            recordCoverage(
                                tools: [[parser: 'COBERTURA']],
                                id: 'coverage',
                                name: 'Python Coverage',
                                sourceCodeRetention: 'EVERY_BUILD'
                            )
                            
                            publishHTML([
                                allowMissing: true,
                                alwaysLinkToLastBuild: true,
                                keepAll: true,
                                reportDir: 'coverage_html',
                                reportFiles: 'index.html',
                                reportName: 'Coverage Report'
                            ])
                        }
                        script {
                            deleteDir()
                        }
                    }
                }
            }
        }    
    }
}
pipeline {
    agent any

    options { skipDefaultCheckout() }

    stages {
        stage( 'Get Code') {
            steps {
            // Obtener código del repo
            git 'https://github.com/anieto-unir/helloworld.git'
            sh '''
                echo "Usuario actual:"
                whoami
                echo "Nombre del host:"
                hostname
                echo ${WORKSPACE}
            '''
            stash name:'code', includes:'**'
            script {
                deleteDir()
            }
            }
        }
        
        stage( 'Tests') {
            parallel{
                stage( 'Unit') {
                    agent {label 'mac2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask
                                export PYTHONPATH=$WORKSPACE
                                ./venv/bin/pytest --junitxml=result-unit.xml test/unit
                            '''
                            junit 'result-unit.xml'
                        }
                        script {
                            deleteDir()
                        }
                    }
                }
                
                stage( 'Rest') {
                    agent {label 'mac3'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask
                                export FLASK_APP=app/api.py   
                                export FLASK_ENV=development
                                ./venv/bin/flask run --host=127.0.0.1 --port=5000 --no-reload &
                                java -jar /Users/migueldonaireparra/Documents/devOps/wiremock/wiremock-standalone-3.13.2.jar --port 9090 --root-dir test/wiremock  &
                               
                                # Esperar a Flask
                                for i in {1..20}; do
                                  curl -s http://127.0.0.1:5000 >/dev/null && break
                                  sleep 1
                                done

                                # Esperar a WireMock
                                for i in {1..20}; do
                                  curl -s http://localhost:9090/__admin >/dev/null && break
                                  sleep 1
                                done

                                export PYTHONPATH=$WORKSPACE
                                ./venv/bin/pytest --junitxml=result-rest.xml test/rest
                            '''
                            junit 'esult-rest.xml'
                        }
                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Static') {
                    agent {label 'mac2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                
                                python3 -m venv venv
                                ./venv/bin/pip install flake8
                                
                                ./venv/bin/flake8 --format=pylint --output-file=flake8.out app/ || true
                                
                                # También puedes generar un reporte más legible:
                                ./venv/bin/flake8 --statistics --tee --output-file=flake8_stats.txt app/ || true
                            '''
                            // Publicar resultados de flake8
                            recordIssues enabledForFailure: true, 
                            tool: flake8(pattern: 'flake8.out'),
                            qualityGates: [[threshold: 10, type: 'TOTAL', unstable: true]]
                        }
                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Coverage') {
                    agent {label 'mac3'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask coverage pytest-cov
                                export PYTHONPATH=$WORKSPACE
                                
                                ./venv/bin/coverage run -m pytest test/unit test/rest
                                ./venv/bin/coverage xml -o coverage.xml
                                ./venv/bin/coverage html -d coverage_html
                            '''
                            publishCoverage adapters: [
                                coberturaAdapter(path: 'coverage.xml')
                            ]
                            publishHTML([
                                reportDir: 'coverage_html',
                                reportFiles: 'index.html',
                                reportName: 'Coverage Report'
                            ])
                        }
                        script {
                            deleteDir()
                        }
                    }
                }
            }
        }    
    }
}
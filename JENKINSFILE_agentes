pipeline {
    agent any

    options { skipDefaultCheckout() }

    stages {
        stage( 'Get Code') {
            steps {
                git 'https://github.com/migueldonaire/devops.git'
                sh '''
                    echo "Usuario actual:"
                    whoami
                    echo "Nombre del host:"
                    hostname
                    echo ${WORKSPACE}
                '''
                stash name:'code', includes:'**'
                script {
                    deleteDir()
                }
            }
        }
        
        stage( 'Tests') {
            parallel{
                stage( 'Unit') {
                    agent {label 'mac2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask
                                export PYTHONPATH=$WORKSPACE
                                ./venv/bin/pytest --junitxml=result-unit.xml test/unit
                            '''
                            junit 'result-unit.xml'
                        }
                        script {
                            deleteDir()
                        }
                    }
                }
                
                stage( 'Rest') {
                    agent {label 'mac3'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask
                                export FLASK_APP=app/api.py   
                                export FLASK_ENV=development

                                ./venv/bin/flask run --host=127.0.0.1 --port=5000 --no-reload &
                                FLASK_PID=$!
                                java -jar /Users/migueldonaireparra/Documents/devOps/wiremock/wiremock-standalone-3.13.2.jar --port 9090 --root-dir test/wiremock  &
                               
                                # Esperar a Flask
                                for i in {1..20}; do
                                  curl -s http://127.0.0.1:5000 >/dev/null && break
                                  sleep 1
                                done

                                # Esperar a WireMock
                                for i in {1..20}; do
                                  curl -s http://localhost:9090/__admin >/dev/null && break
                                  sleep 1
                                done

                                export PYTHONPATH=$WORKSPACE
                                ./venv/bin/pytest --junitxml=result-rest.xml test/rest

                                kill $FLASK_PID || true
                                pkill -f "wiremock" || true
                            '''
                            junit 'result-rest.xml'
                        }
                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Static') {
                    agent {label 'mac2'}
                    steps {
                        unstash name:'code'
                        sh '''
                            echo "Usuario actual:"
                            whoami
                            echo "Nombre del host:"
                            hostname
                            echo ${WORKSPACE}

                            python3 -m venv venv
                            ./venv/bin/pip install flake8 flake8-html

                            ./venv/bin/flake8 --format=html --htmldir=flake8_html app/ || true
                            ./venv/bin/flake8 --format=pylint --output-file=flake8.out app/ || true
                        '''

                        recordIssues enabledForFailure: true,
                            tool: pyLint(pattern: 'flake8.out'),
                            unhealthy: 10,
                            qualityGates: [
                                [threshold: 8, type: 'TOTAL', unstable: true],
                                [threshold: 10, type: 'TOTAL', unstable: false]
                            ]

                        publishHTML([
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: 'flake8_html',
                            reportFiles: 'index.html',
                            reportName: 'Flake8 HTML Report'
                        ])

                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Security Test') {
                    agent {label 'mac2'}
                    steps {
                        unstash name:'code'
                        sh '''
                            echo "Usuario actual:"
                            whoami
                            echo "Nombre del host:"
                            hostname
                            echo ${WORKSPACE}

                            python3 -m venv venv
                            ./venv/bin/pip install bandit bandit-sarif-formatter

                            ./venv/bin/bandit -r app -f sarif -o bandit-report.sarif || true
                            ./venv/bin/bandit -r app -f html -o bandit-report.html || true
                        '''

                        recordIssues enabledForFailure: true,
                            tool: sarif(pattern: 'bandit-report.sarif'),
                            unhealthy: 4,
                            qualityGates: [
                                [threshold: 2, type: 'TOTAL', unstable: true],
                                [threshold: 4, type: 'TOTAL', unstable: false]
                            ]

                        publishHTML([
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: '.',
                            reportFiles: 'bandit-report.html',
                            reportName: 'Bandit Security Report'
                        ])

                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Coverage') {
                    agent {label 'mac3'}
                    steps {
                        unstash name:'code'
                        sh '''
                            echo "Usuario actual:"
                            whoami
                            echo "Nombre del host:"
                            hostname
                            echo ${WORKSPACE}

                            python3 -m venv venv
                            ./venv/bin/pip install pytest flask coverage pytest-cov
                            export PYTHONPATH=$WORKSPACE

                            ./venv/bin/coverage run --branch -m pytest test/unit
                            ./venv/bin/coverage xml -o coverage.xml
                            ./venv/bin/coverage html -d coverage_html
                            ./venv/bin/coverage report
                        '''

                        recordCoverage(
                            tools: [[parser: 'COBERTURA', pattern: 'coverage.xml']],
                            id: 'coverage',
                            name: 'Python Coverage',
                            sourceCodeRetention: 'EVERY_BUILD',
                            qualityGates: [
                                [threshold: 85.0, metric: 'LINE', unstable: false],
                                [threshold: 95.0, metric: 'LINE', unstable: true],
                                [threshold: 80.0, metric: 'BRANCH', unstable: false],
                                [threshold: 90.0, metric: 'BRANCH', unstable: true]
                            ]
                        )

                        publishHTML([
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: 'coverage_html',
                            reportFiles: 'index.html',
                            reportName: 'Coverage Report'
                        ])

                        script {
                            deleteDir()
                        }
                    }
                }

                stage( 'Performance') {
                    agent {label 'mac2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}

                                echo "=== DEBUG: Verificando archivos despuÃ©s de unstash ==="
                                ls -la test/jmeter/ || echo "ERROR: No existe test/jmeter/"
                                find . -type f -name "*.jmx" || echo "ERROR: No se encontraron archivos .jmx"
                                echo "=== Contenido del workspace ==="
                                ls -la

                                python3 -m venv venv
                                ./venv/bin/pip install flask

                                WORKSPACE_DIR=$WORKSPACE

                                export FLASK_APP=app/api.py
                                export FLASK_ENV=development
                                ./venv/bin/flask run --host=127.0.0.1 --port=5000 --no-reload &
                                FLASK_PID=$!

                                for i in {1..20}; do
                                curl -s http://127.0.0.1:5000 >/dev/null && break
                                sleep 1
                                done

                                echo "Flask started with PID: $FLASK_PID"
                                echo "Workspace directory: $WORKSPACE_DIR"

                                /Users/migueldonaireparra/jenkins/jmeter/bin/jmeter -n -t test/jmeter/flask-performance.jmx \
                                -l jmeter-results.jtl \
                                -e -o jmeter-report

                                sleep 3
                                
                                kill $FLASK_PID || true
                                
                                echo "Performance test completed"
                            '''
                            
                            perfReport sourceDataFiles: 'jmeter-results.jtl',
                                    errorUnstableThreshold: 50,
                                    errorFailedThreshold: 75,
                                    errorUnstableResponseTimeThreshold: 'jmeter-results.jtl:3000'
                            
                            publishHTML([
                                allowMissing: true,
                                alwaysLinkToLastBuild: true,
                                keepAll: true,
                                reportDir: 'jmeter-report',
                                reportFiles: 'index.html',
                                reportName: 'JMeter Performance Report'
                            ])
                        }
                        script {
                            deleteDir()
                        }
                        
                    }
                }
            }
        }    
    }
}
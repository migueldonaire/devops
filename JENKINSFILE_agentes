pipeline {
    agent any

    options { skipDefaultCheckout() }

    stages {
        stage( 'Get Code') {
            steps {
            // Obtener cÃ³digo del repo
            git 'https://github.com/anieto-unir/helloworld.git'
            sh '''
                echo "Usuario actual:"
                whoami
                echo "Nombre del host:"
                hostname
                echo ${WORKSPACE}
            '''
            stash name:'code', includes:'**'
            script {
                deleteDir()
            }
            }
        }
        
        stage( 'Build') {
            steps {
                sh '''
                    echo "Usuario actual:"
                    whoami
                    echo "Nombre del host:"
                    hostname
                    echo ${WORKSPACE}
                    echo 'fake build'
                '''
            }
        }
        
        stage( 'Tests') {
            parallel{
                stage( 'Unit') {
                    agent {label 'mac2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask
                                export PYTHONPATH=$WORKSPACE
                                ./venv/bin/pytest --junitxml=result-unit.xml test/unit
                            '''
                            stash name:'unit-res', includes:'result-unit.xml'
                        }
                        script {
                            deleteDir()
                        }
                    }
                }
                
                stage( 'Service') {
                    agent {label 'mac3'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            unstash name:'code'
                            sh '''
                                echo "Usuario actual:"
                                whoami
                                echo "Nombre del host:"
                                hostname
                                echo ${WORKSPACE}
                                python3 -m venv venv
                                ./venv/bin/pip install pytest flask
                                export FLASK_APP=app/api.py   
                                export FLASK_ENV=development
                                ./venv/bin/flask run --host=127.0.0.1 --port=5000 --no-reload &
                                java -jar /Users/migueldonaireparra/Documents/devOps/wiremock/wiremock-standalone-3.13.2.jar --port 9090 --root-dir test/wiremock  &
                               
                                # Esperar a Flask
                                for i in {1..20}; do
                                  curl -s http://127.0.0.1:5000 >/dev/null && break
                                  sleep 1
                                done

                                # Esperar a WireMock
                                for i in {1..20}; do
                                  curl -s http://localhost:9090/__admin >/dev/null && break
                                  sleep 1
                                done

                                export PYTHONPATH=$WORKSPACE
                                ./venv/bin/pytest --junitxml=result-rest.xml test/rest
                            '''
                            stash name:'rest-res', includes:'result-rest.xml'
                        }
                        script {
                            deleteDir()
                        }
                    }
                }
            }
        }    
        stage( 'Results') {
            steps {
                sh '''
                    echo "Usuario actual:"
                    whoami
                    echo "Nombre del host:"
                    hostname
                    echo ${WORKSPACE}
                '''
                unstash name:'unit-res'
                unstash name:'rest-res'
                junit 'result*.xml'
                script {
                    deleteDir()
                }
            }
        }
    }
}